# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=ecto://postgres:postgres@localhost/hotspot_api_dev
POOL_SIZE=10

# ===========================================
# PHOENIX CONFIGURATION
# ===========================================
SECRET_KEY_BASE=your_secret_key_base_here
PHX_HOST=localhost
PORT=4000
ECTO_IPV6=false

# ===========================================
# TWILIO CONFIGURATION (OTP SMS)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid_here

# ===========================================
# GUARDIAN JWT CONFIGURATION
# ===========================================
GUARDIAN_SECRET_KEY=your_guardian_secret_key_here

# ===========================================
# APPWRITE CONFIGURATION (File Storage)
# ===========================================
APPWRITE_PROJECT_ID=your_appwrite_project_id_here
APPWRITE_DATABASE_ID=your_appwrite_database_id_here
APPWRITE_STORAGE_BUCKET_ID=your_appwrite_storage_bucket_id_here
APPWRITE_API_SECRET=your_appwrite_api_secret_here
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# ===========================================
# PAYSTACK CONFIGURATION (Payments)
# ===========================================
PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here

# ===========================================
# FIREBASE CLOUD MESSAGING (Push Notifications)
# ===========================================
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# ===========================================
# CLOUDINARY (Alternative Image Storage)
# ===========================================
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ===========================================
# REDIS CONFIGURATION (Caching & Sessions)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# MAPLIBRE / MAP TILES
# ===========================================
MAPLIBRE_STYLE_URL=https://tiles.example.com/style.json

# ===========================================
# GOOGLE PLACES API (Emergency Services)
# ===========================================
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# AbuseIPDB API key for threat intelligence
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# Email for security alerts
SECURITY_ALERT_EMAIL=security@hotspot.app

# Backup encryption key (generate with: openssl rand -base64 32)
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# AWS S3 for backup storage (optional)
AWS_S3_BUCKET=hotspot-backups
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ===========================================
# ENVIRONMENT
# ===========================================
MIX_ENV=dev
